<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Add background color here -->
    <solid android:color="#FFFFFF">

    </solid>

    <!-- Assign border color and width of border -->
    <stroke
        android:width="1.5dp"
        android:color="#F8962D">

    </stroke>

    <!-- To add some padding -->
    <padding
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp">

    </padding>

    <!-- Assign corner radius here -->
    <corners android:radius="20dp">

    </corners>

</shape>