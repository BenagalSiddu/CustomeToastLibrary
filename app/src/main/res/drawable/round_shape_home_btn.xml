<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">


    <!-- Assign border color and width of border -->
    <stroke
        android:width="2dp"
        android:color="@color/orange_light">

    </stroke>

    <!-- To add some padding -->
